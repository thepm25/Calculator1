<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/myview">

    <TextView
        android:id="@+id/calculations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"





        android:layout_marginTop="6dp"
        android:paddingTop="20dp"


        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="0.0"
        android:textColor="#57A09797"

        android:gravity="right"



        android:textSize="30sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_below="@+id/calculations"

        android:layout_marginBottom="10dp"

        >

        <TextView
            android:id="@+id/answers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/calculations"

            android:layout_marginTop="10dp"


            android:drawableBottom="@drawable/background"
            android:gravity="center"
            android:maxLines="1"
            android:text="8"
            android:layout_marginBottom="10dp"

            android:textSize="80sp"


            android:textColor="#FFFFFF"
            android:visibility="visible" />

    </HorizontalScrollView>
    <View
        android:id="@+id/divider"


        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"

        android:layout_height="0dp"
        android:layout_weight="0.005"


        android:background="#919192"
        android:visibility="visible" />


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.63"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:alignmentMode="alignBounds"





        android:background="#00C78282"

        android:gravity="center"

        android:columnCount="4"
        android:rowCount="5"
        android:visibility="visible">

        <Button

            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"

            android:layout_row="0"
            android:layout_column="0"
            android:background="@android:color/transparent"

            android:fontFamily="sans-serif"

            android:text="1"

            android:textColor="#57CEC5C5"
            android:textSize="25dp" />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"

            android:layout_column="1"
            android:alpha="100"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="2"

            android:textColor="#57A09797"
            android:textSize="25dp" />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="3"

            android:textColor="#57A09797"
            android:textSize="25dp" />

        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="+"
            android:textColor="#F06E6E"
            android:textSize="25dp" />

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="4"
            android:textColor="#57A09797"
            android:textSize="25dp" />


        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="5"
            android:textColor="#57A09797"

            android:textSize="25dp" />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="6"
            android:textColor="#57A09797"

            android:textSize="25dp" />

        <Button
            android:id="@+id/subtract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="-"
            android:textColor="#F06E6E"

            android:textSize="25dp" />

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_column="0"

            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="7"
            android:textColor="#57A09797"
            android:textSize="25dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="8"
            android:textColor="#57A09797"

            android:textSize="25dp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="0.5"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="9"

            android:textColor="#57A09797"

            android:textSize="25dp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@android:color/transparent"
            android:text="*"
            android:fontFamily="sans-serif"
            android:textSize="25dp"

            android:textColor="#F06E6E" />

        <Button
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:text="CE"
            android:fontFamily="sans-serif"
            android:textSize="25dp"

            android:textColor="#ffffff" />

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textColor="#57A09797"

            android:textSize="25dp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:text="C"
            android:textSize="25dp"
            android:fontFamily="sans-serif"

            android:textColor="#ffffff" />

        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@android:color/transparent"
            android:text="/"
            android:fontFamily="sans-serif"
            android:textSize="25dp"

            android:textColor="#F06E6E" />

        <Button
            android:id="@+id/decimal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@android:color/transparent"
            android:text="."
            android:textSize="25sp"
            android:fontFamily="sans-serif"

            android:textColor="#ffffff" />

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_column="3"
            android:background="@android:color/transparent"
            android:backgroundTint="#F06E6E"
            android:backgroundTintMode="src_in"
            android:shadowColor="#F06E6E"
            android:outlineSpotShadowColor="#F06E6E"

            android:text="="
            android:fontFamily="sans-serif"
            android:textSize="25sp"

            android:textColor="#F06E6E" />
        <Button
            android:id="@+id/blank1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:text=""
            android:textSize="25sp"
            android:fontFamily="sans-serif"

            android:textColor="#ffffff" />
        <Button
            android:id="@+id/blank2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@android:color/transparent"
            android:text=""
            android:textSize="25sp"
            android:fontFamily="sans-serif"

            android:textColor="#ffffff" />

    </GridLayout>






</LinearLayout>